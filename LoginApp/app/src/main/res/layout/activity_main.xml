<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:text="회원가입 창"
        android:id="@+id/sign_in_text"
        />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sign_in_text"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:hint="이름"
            android:id="@+id/name_edit"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_edit"
            android:layout_marginLeft="80dp"
            android:hint="아이디"
            android:id="@+id/id_edit"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_edit"
            android:layout_toRightOf="@+id/id_edit"
            android:text="확인"
            android:onClick="onclick"
            android:id="@+id/ok_button"/>
        <EditText
            android:layout_width="200dp"
            android:hint="비밀번호"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_edit"
            android:layout_centerHorizontal="true"
            android:id="@+id/password_edit"/>

    <EditText
        android:id="@+id/password_one_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_edit"
        android:layout_centerHorizontal="true"
        android:hint="비밀번호를 한번 더 입력해주세요" />

    <Button
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="108dp"
        android:text="회원 가입"
        android:onClick="signin"
        android:textSize="20dp" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="회원 가입 취소"
        android:onClick="signcancel"
        android:textSize="20dp" />
    </RelativeLayout>
